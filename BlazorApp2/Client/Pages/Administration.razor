@page "/administration"
@using BlazorApp2.Shared;
@using BlazorApp2.Client.Services;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject IAcountService AcountService
@inject NavigationManager NavigationManager
@attribute [Authorize]

<h3>Administration</h3>

<AuthorizeView>
    <Authorized>
        <samp href="authentication/profile">Hello, @context.User.Identity?.Name! </samp>
    </Authorized>
    <NotAuthorized>
        <p>You're not loggged in.</p>
    </NotAuthorized>
</AuthorizeView>

<table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>User Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in AcountService.Accounts)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <!-- Edit the current forecast -->
                                @*<button class="btn btn-primary" @onclick="(() => EditUser(user))">
                                    Edit
                                </button>*@
                            </td>
                        </tr>
                    }
                </tbody>
</table>

